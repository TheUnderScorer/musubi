{
  "name": "http-link",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/http-link/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@musubi/nx-tools:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/http-link",
        "inputFiles": ["client/client.ts", "server/adapters/express-adapter.ts"],
        "additionalPeerDeps": ["express"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/http-link/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/http-link/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "buildTarget": "http-link:build",
        "tagFormat": "http-link-v${VERSION}",
        "outputPath": "dist/packages/http-link"
      }
    }
  },
  "tags": []
}
