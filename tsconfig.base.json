{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "target": "ES2020",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@musubi/browser-extension-link": [
        "packages/browser-extension-link/src/index.ts"
      ],
      "@musubi/core": ["packages/core/src/index.ts"],
      "@musubi/electron-link/main": ["packages/electron-link/src/main/main.ts"],
      "@musubi/electron-link/renderer": [
        "packages/electron-link/src/renderer/renderer.ts"
      ],
      "@musubi/examples/electron/shared": [
        "packages/examples/electron/shared/src/index.ts"
      ],
      "@musubi/http-link": ["packages/http-link/src/index.ts"],
      "@musubi/in-memory-link": ["packages/in-memory-link/src/index.ts"],
      "@musubi/nx-tools": ["packages/nx-tools/src/index.ts"],
      "@musubi/react": ["packages/react/src/index.ts"],
      "@musubi/socket-io-link": ["packages/socket-io-link/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
